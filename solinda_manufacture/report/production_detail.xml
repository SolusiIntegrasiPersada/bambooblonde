<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="solinda_mrp.external_layout_standard_printout">
        <div class="header">
            <div class="col-xs-2">
            </div>
        </div>
        <div class="article o_report_layout_standard">
            <t t-raw="0" />
        </div>
        <div class="footer">
            <div class="text-center">
            </div>
        </div>
    </template>
    <template id="report_production_detail">
        <t t-call="web.basic_layout">
            <div class="page">
                <t t-foreach="docs" t-as="doc">
                    <t t-set="company" t-value="res_company"></t>
                    <div class="text-center">
                      <div class="row">
                        <div class="col-3 mb4">
                          <img t-if="company.logo" t-att-src="image_data_uri(company.logo)" style="max-height: 60px;" alt="Logo"/>
                        </div>
                        <div class="col-3"></div>
                        <div class="col-6 text-right">
                          <span t-if="company.company_details" t-field="company.company_details"/>
                        </div>
                      </div>
                    </div>
                    <br/>
                    <br/>
                    <div class="container">
                        <table style="border-collapse: collapse; width: 100%;" border="1">
                            <tbody>
                                <tr>
                                    <td style="width: 50%;">
                                        <h2>
                                            <span style="text-decoration: underline;">PRODUCTION DETAIL</span>
                                        </h2>
                                    </td>
                                    <td style="width: 50%; text-align: right;">
                                        Print Date, <t t-esc="datetime.datetime.now().strftime('%b %d, %Y %H:%M')" />
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        <table style="border-collapse: collapse; width: 117.534%; height: 120px;" border="1">
                            <tbody>
                                <tr style="height: 18px;">
                                    <td style="width: 18.0636%; height: 18px;">Trans No.</td>
                                    <td style="width: 5.17816%; text-align: center; height: 18px;">:</td>
                                    <td style="width: 26.7582%; height: 18px;">
                                        <t t-esc="doc.name"/>
                                    </td>
                                    <td style="width: 14.9807%; height: 18px;">Customer</td>
                                    <td style="width: 5.75629%; height: 18px; text-align: center;">:</td>
                                    <td style="width: 14.6315%; height: 18px;">
                                        <t t-esc="doc.customer.name"/>
                                    </td>
                                    <td style="width: 14.6315%; height: 90px; text-align: center;" rowspan="4">
                                    </td>
                                </tr>
                                <tr style="height: 18px;">
                                    <td style="width: 18.0636%; height: 18px;">Trans Date</td>
                                    <td style="width: 5.17816%; text-align: center; height: 18px;">:</td>
                                    <td style="width: 26.7582%; height: 18px;">
                                        <t t-esc="doc.trans_date" t-options='{"widget": "date", "format": "dd-MM-yyyy"}'/>
                                    </td>
                                    <td style="width: 14.9807%; height: 18px;">SO No.</td>
                                    <td style="width: 5.75629%; height: 18px; text-align: center;">:</td>
                                    <td style="width: 14.6315%; height: 18px;">
                                        <t t-esc="doc.sales_order_id.name"/>
                                    </td>
                                </tr>
                                <tr style="height: 18px;">
                                    <td style="width: 18.0636%; height: 18px;">Delivery</td>
                                    <td style="width: 5.17816%; text-align: center; height: 18px;">:</td>
                                    <td style="width: 26.7582%; height: 18px;">
                                        <t t-esc="doc.delivery_date" t-options='{"widget": "date", "format": "dd-MM-yyyy"}'/>
                                    </td>
                                    <td style="width: 14.9807%; height: 18px;">PO No.</td>
                                    <td style="width: 5.75629%; height: 18px; text-align: center;">:</td>
                                    <td style="width: 14.6315%; height: 18px;">
                                        <t t-esc="doc.purchase_id.name"/>
                                    </td>
                                </tr>
                                <tr style="height: 36px;">
                                    <td style="width: 18.0636%; height: 36px;">Stock Name</td>
                                    <td style="width: 5.17816%; text-align: center; height: 36px;">:</td>
                                    <td style="width: 26.7582%; height: 36px;">
                                        <t t-esc="doc.product_tmpl_id.name"/>
                                    </td>
                                    <td style="width: 14.9807%; height: 36px;">Wholesale Price</td>
                                    <td style="width: 5.75629%; height: 36px; text-align: center;">:</td>
                                    <td style="width: 14.6315%; height: 36px;">
                                        <strong>
<!--                                            <t t-esc="'%.0f'% doc.retail_price"/>-->
                                            <t t-esc="'{:,.0f}'.format(doc.retail_price)"/>
                                        </strong>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        <table style="border-collapse: collapse; width: 100%; height: 90px;" border="1">
                            <tbody>
                                <tr style="height: 18px;">
                                    <td style="width: 15%; height: 18px; text-align: center; border: 1px solid black; padding:3px;">Supplier</td>
                                    <td style="width: 10%; height: 18px; text-align: center; border: 1px solid black; padding:3px;">Payment</td>
                                    <td style="width: 10%; height: 18px; text-align: center; border: 1px solid black; padding:3px;">Fabric</td>
                                    <td style="width: 10%; height: 18px; text-align: center; border: 1px solid black; padding:3px;">Service</td>
                                    <td style="width: 10%; height: 18px; text-align: center; border: 1px solid black; padding:3px;">Color</td>
                                    <td style="width: 3%; height: 18px; text-align: center; border: 1px solid black; padding:3px;">HK</td>
                                    <td style="width: 3%; height: 18px; text-align: center; border: 1px solid black; padding:3px;">Qty</td>
                                    <td style="width: 7%; height: 18px; text-align: center; border: 1px solid black; padding:3px;">Price</td>
                                    <td style="width: 5%; height: 18px; text-align: center; border: 1px solid black; padding:3px;">UoM</td>
                                    <td style="width: 5%; height: 18px; text-align: center; border: 1px solid black; padding:3px;">T.Dyeing</td>
                                    <td style="width: 5%; height: 18px; text-align: center; border: 1px solid black; padding:3px;">T.Mtr</td>
                                    <td style="width: 5%; height: 18px; text-align: center; border: 1px solid black; padding:3px;">T.Buy</td>
                                    <td style="width: 5%; height: 18px; text-align: center; border: 1px solid black; padding:3px;">Shkg.</td>
                                    <td style="width: 7%; height: 18px; text-align: center; border: 1px solid black; padding:3px;">T.Cost</td>
                                </tr>
                                <t t-foreach="doc.move_raw_ids" t-as="move">
                                    <tr style="height: 18px;">
                                        <td style="width: 15%; height: 18px; border: 1px solid black; padding:3px;">
                                            <t t-esc="move.supplier.name"/>
                                        </td>
                                        <td style="width: 10%; height: 18px; text-align: center; border: 1px solid black; padding:3px;">
                                            <span t-field="move.mrp_payment_id"/>
                                        </td>
                                        <td style="width: 10%; height: 18px; text-align: center; border: 1px solid black; padding:3px;">
                                            <t t-esc="move.product_id.name"/>
                                        </td>
                                        <td style="width: 10%; height: 18px; text-align: center; border: 1px solid black; padding:3px;">FABRIC</td>
                                        <td style="width: 10%; height: 18px; text-align: center; border: 1px solid black; padding:3px;">
                                            <span t-field="move.color_id"/>
                                        </td>
                                        <td style="width: 3%; height: 18px; text-align: center; border: 1px solid black; padding:3px;">
                                            <span t-field="move.hk"/>
                                        </td>
                                        <td style="width: 3%; height: 18px; text-align: center; border: 1px solid black; padding:3px;">
                                            <t t-esc="'%.0f'% move.po_qty"/>
                                        </td>
                                        <td style="width: 7%; height: 18px; text-align: right; border: 1px solid black; padding:3px;">
<!--                                            <span t-esc="move.cost_material" t-options="{'widget': 'monetary','display_currency': res_company.currency_id}"/>-->
                                            <t t-if="move.uom_total_buy.name == 'yard'">
                                                <t t-set="yard" t-value="0.9144"/>
                                                <t t-set="total" t-value="move.cost_material * yard"/>
                                                <t t-esc="'{:,.0f}'.format(total)"/>
                                            </t>
                                            <t t-else="">
                                                <t t-esc="'{:,.0f}'.format(move.cost_material)"/>
                                            </t>
                                        </td>
                                        <td style="width: 5%; height: 18px; text-align: center; border: 1px solid black; padding:3px;">
                                            <t t-esc="move.uom_total_buy.name"/>
                                        </td>
                                        <td style="width: 5%; height: 18px; text-align: center; border: 1px solid black; padding:3px;">-</td>
                                        <td style="width: 5%; height: 18px; text-align: center; border: 1px solid black; padding:3px;">
                                            <t t-esc="move.product_uom_qty"/>
                                        </td>
                                        <td style="width: 5%; height: 18px; text-align: center; border: 1px solid black; padding:3px;">
                                            <span t-field="move.total_buy"/>
                                        </td>
                                        <td style="width: 5%; height: 18px; text-align: center; border: 1px solid black; padding:3px;">-</td>
                                        <td style="width: 7%; height: 18px; text-align: right; border: 1px solid black; padding:3px;">
<!--                                            <t t-esc="move.total_cost" t-options="{'widget': 'monetary','display_currency': res_company.currency_id}"/>-->
                                            <t t-if="move.uom_total_buy.name == 'yard'">
                                                <t t-set="yard" t-value="0.9144"/>
                                                <t t-set="total_costing" t-value="move.total_cost * yard"/>
                                                <t t-esc="'{:,.0f}'.format(total_costing)"/>
                                            </t>
                                            <t t-else="">
                                                <t t-esc="'{:,.0f}'.format(move.total_cost)"/>
                                            </t>

                                        </td>
                                    </tr>
                                </t>
                                <t t-foreach="doc.workorder_ids" t-as="work">
                                    <tr style="height: 18px;">
                                        <td style="width: 15%; height: 18px; border: 1px solid black; padding:3px;">
                                            <t t-esc="work.supplier.name"/>
                                        </td>
                                        <td style="width: 10%; height: 18px; text-align: center; border: 1px solid black; padding:3px;">
                                            <span t-field="work.mrp_payment_id"/>
                                        </td>
                                        <td style="width: 10%; height: 18px; text-align: center; border: 1px solid black; padding:3px;">
                                            <t t-foreach="work.fabric_id" t-as="line">
                                                <span t-esc="line.product_id.name"/>
                                            </t>
                                        </td>
                                        <td style="width: 10%; height: 18px; text-align: center; border: 1px solid black; padding:3px;">
                                            <t t-esc="work.workcenter_id.name"/>
                                        </td>
                                        <td style="width: 10%; height: 18px; text-align: center; border: 1px solid black; padding:3px;">
                                            <span t-field="work.color_id"/>
                                        </td>
                                        <td style="width: 3%; height: 18px; text-align: center; border: 1px solid black; padding:3px;">
                                            <span t-field="work.hk"/>
                                        </td>
                                        <td style="width: 3%; height: 18px; text-align: center; border: 1px solid black; padding:3px;">
                                            <t t-esc="'%.0f'% doc.total_qty"/>
                                        </td>
                                        <td style="width: 7%; height: 18px; text-align: right; border: 1px solid black; padding:3px;">
<!--                                            <t t-esc="work.cost_service" t-options="{'widget': 'monetary','display_currency': res_company.currency_id}" />-->
                                            <t t-esc="'{:,.0f}'.format(work.cost_service)"/>
                                        </td>
                                        <td style="width: 5%; height: 18px; text-align: center; border: 1px solid black; padding:3px;">
                                            <t t-esc="work.workcenter_id.uom_id.name"/>
                                        </td>
                                        <td style="width: 5%; height: 18px; text-align: center; border: 1px solid black; padding:3px;">
                                            <t t-if="work.workcenter_id.name == 'DYEING' or work.workcenter_id.name == 'PRINTING' or work.workcenter_id.name == 'WASHING'">
                                                <t t-esc="work.total_dyeing"/>
                                            </t>
                                            <t t-else="">
                                                -
                                            </t>
                                        </td>
                                        <td style="width: 5%; height: 18px; text-align: center; border: 1px solid black; padding:3px;">
                                            <t t-if="work.workcenter_id.name == 'DYEING' or work.workcenter_id.name == 'PRINTING' or work.workcenter_id.name == 'WASHING'">
                                                <t t-esc="work.total_mtr"/>
                                            </t>
                                            <t t-else="">
                                                -
                                            </t>
                                        </td>
                                        <td style="width: 5%; height: 18px; text-align: center; border: 1px solid black; padding:3px;">-</td>
                                        <td style="width: 5%; height: 18px; text-align: center; border: 1px solid black; padding:3px;">-</td>
                                        <td style="width: 7%; height: 18px; text-align: right; border: 1px solid black; padding:3px;">
<!--                                            <t t-esc="work.total_cost" t-options="{'widget': 'monetary','display_currency': res_company.currency_id}" />-->
                                            <t t-esc="'{:,.0f}'.format(work.total_cost)"/>
                                        </td>
                                    </tr>
                                </t>
                                <tr>
                                    <td style="width: 15%; border: 1px solid black;"></td>
                                    <td style="width: 10%; text-align: center; border: 1px solid black;"></td>
                                    <td style="width: 10%; border: 1px solid black;"></td>
                                    <td style="width: 10%; border: 1px solid black;"></td>
                                    <td style="width: 10%; border: 1px solid black;"></td>
                                    <td style="width: 3%; text-align: center; border: 1px solid black;"></td>
                                    <td style="width: 5%; text-align: right; border: 1px solid black;"></td>
                                    <td style="width: 5%; text-align: right; border: 1px solid black;"></td>
                                    <td style="width: 5%; text-align: center; border: 1px solid black;"></td>
                                    <td style="width: 5%; text-align: right; border: 1px solid black;"></td>
                                    <td style="width: 5%; text-align: right; border: 1px solid black;"></td>
                                    <td style="width: 5%; text-align: right; border: 1px solid black;"></td>
                                    <td style="width: 5%; text-align: right; border: 1px solid black;"></td>
                                    <td style="width: 7%; text-align: right; border: 1px solid black; padding:3px;">
                                        <strong>
<!--                                            <t t-esc="doc.total_cost" t-options="{'widget': 'monetary','display_currency': res_company.currency_id}" />-->
                                            <t t-esc="'{:,.0f}'.format(doc.total_cost)"/>
                                        </strong>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        <table style="border-collapse: collapse; width: 100%;" border="1">
                            <tbody>
                                <tr>
                                    <td style="width: 50%; text-align: center;">
                                        <table style="border-collapse: collapse; width: 100%;" border="1">
                                            <tbody>
                                                <tr>
                                                    <td style="width: 50%; border: 1px solid black; padding:3px;">SIZE</td>
                                                    <td style="width: 50%; border: 1px solid black; padding:3px;">Qty</td>
                                                </tr>
                                                <t t-set="total_qty" t-value="0"/>
                                                <t t-foreach="doc.by_product_ids" t-as="by">
                                                    <t t-set="total_qty" t-value="total_qty + by.product_uom_qty"/>
                                                    <tr>
                                                        <td style="width: 50%; border: 1px solid black; padding:3px;">
                                                            <t t-esc="by.size"/>
                                                        </td>
                                                        <td style="width: 50%; border: 1px solid black; padding:3px;">
                                                            <t t-esc="'%.0f'% by.product_uom_qty"/>
                                                        </td>
                                                    </tr>
                                                </t>
                                                <tr>
                                                    <td style="width: 50%; border: 1px solid black; padding:3px;">TOTAL</td>
                                                    <td style="width: 50%; border: 1px solid black; padding:3px;">
                                                        <t t-esc="'%.0f'% total_qty"/>
                                                    </td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </td>
                                    <td style="width: 50%;">
                                        <table style="border-collapse: collapse; width: 100%;" border="1">
                                            <tbody>
                                                <tr>
                                                    <td style="width: 22.158%; border: 1px solid black; padding:3px;">Total Cost</td>
                                                    <td style="width: 4.81688%; text-align: center; border: 1px solid black; padding:3px;">:</td>
                                                    <td style="width: 84.2118%; text-align: right; border: 1px solid black; padding:3px;">
                                                        <strong>
                                                            <t t-esc="doc.total_cost" t-options="{'widget': 'monetary','display_currency': res_company.currency_id}" />
                                                        </strong>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td style="width: 22.158%; border: 1px solid black; padding:3px;">Total Wholesale</td>
                                                    <td style="width: 4.81688%; text-align: center; border: 1px solid black; padding:3px;">:</td>
                                                    <td style="width: 84.2118%; text-align: right; border: 1px solid black; padding:3px;">
                                                        <strong>
                                                            <t t-set="total_whole" t-value="doc.retail_price * doc.total_qty"/>
                                                            <t t-esc="total_whole" t-options="{'widget': 'monetary','display_currency': res_company.currency_id}" />
                                                        </strong>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td style="width: 22.158%; border: 1px solid black; padding:3px;">ROI</td>
                                                    <td style="width: 4.81688%; text-align: center; border: 1px solid black; padding:3px;">:</td>
                                                    <td style="width: 84.2118%; text-align: right; border: 1px solid black; padding:3px;">
                                                        <strong>
                                                            <t t-esc="'%.2f'% doc.roi" />
                                                            %
                                                        </strong>
                                                    </td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        <table style="border-collapse: collapse; width: 100%;" border="1">
                            <tbody>
                                <tr>
                                    <td style="width: 13.2948%; padding:3px;">Notes</td>
                                    <td style="width: 11.368%; text-align: center; padding:3px;">:</td>
                                    <td style="width: 75.3371%; padding:3px;"></td>
                                </tr>
                            </tbody>
                        </table>
                        <table style="border-collapse: collapse; width: 100%; height: 76px;" border="1">
                            <tbody>
                                <tr style="height: 18px;">
                                    <td style="width: 20%; text-align: center; height: 18px;">Prepared By,</td>
                                    <td style="width: 20%; text-align: center; height: 18px;"></td>
                                    <td style="width: 20%; text-align: center; height: 18px;">Checked,</td>
                                    <td style="width: 20%; text-align: center; height: 18px;"></td>
                                    <td style="width: 20%; text-align: center; height: 18px;">Approved,</td>
                                </tr>
                                <tr style="height: 40px;">
                                    <td style="width: 20%; text-align: center; height: 40px;"></td>
                                    <td style="width: 20%; text-align: center; height: 40px;"></td>
                                    <td style="width: 20%; text-align: center; height: 40px;"></td>
                                    <td style="width: 20%; text-align: center; height: 40px;"></td>
                                    <td style="width: 20%; text-align: center; height: 40px;"></td>
                                </tr>
                                <tr style="height: 18px;">
                                    <td style="width: 20%; text-align: center; height: 18px;">(................................)</td>
                                    <td style="width: 20%; text-align: center; height: 18px;"></td>
                                    <td style="width: 20%; text-align: center; height: 18px;">(................................)</td>
                                    <td style="width: 20%; text-align: center; height: 18px;"></td>
                                    <td style="width: 20%; text-align: center; height: 18px;">(................................)</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <br/>
                    <br/>
                    <br/>
                    <br/>
                    <div class="container">
                        <div class="row">
                            <div class="col-sm">
                                <img t-if="doc.product_tmpl_id.image_1920" t-att-src="image_data_uri(doc.product_tmpl_id.image_1920)" style="max-height:220px; max-width:225;"/>
                            </div>
                            <div class="col-sm">
                            </div>
                            <div class="col-sm">
                            </div>
                        </div>
                    </div>
                </t>
            </div>
        </t>
    </template>
</odoo>
