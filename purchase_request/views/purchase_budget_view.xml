<odoo>
    <record id="view_purchase_budget_form" model="ir.ui.view">
        <field name="name">purchase.budget.form</field>
        <field name="model">purchase.budget</field>
        <field name="arch" type="xml">
            <form string="Purchase Budget">
                <sheet>
                    <h1>
                        <field name="name" class="oe_inline" readonly="1"/>
                    </h1>
                    <group>
                        <group>
                            <field name="budget_amount" widget="monetary"/>
                            <field name="remaining_amount" widget="monetary"/>
                            <field name="usage_amount" widget="monetary"/>
                        </group>
                        <group>
                            <field name="month"/>
                            <field name="budget_days" min="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Budget">
                            <field name="budget_ids">
                                <tree editable="bottom">
                                    <field name="category_id" options="{'no_show':True,'no_create':True,'no_open':True}"/>
                                    <field name="budget_guide" widget="percentage"/>
                                    <field name="budget_amount" widget="monetary"/>
                                    <field name="actual_percentage" widget="percentage"/>
                                    <field name="stock_percentage" widget="percentage"/>
                                    <field name="purchase_qty"/>
                                    <field name="total_value" widget="monetary"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_purchase_budget_tree" model="ir.ui.view">
        <field name="name">purchase.budget.tree</field>
        <field name="model">purchase.budget</field>
        <field name="arch" type="xml">
            <tree name="Purchase Budget">
                <field name="name"/>
                <field name="remaining_amount"/>
                <field name="usage_amount"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="purchase_budget_action">
        <field name="name">Budgeting</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">purchase.budget</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to start a new purchase budget.
            </p>
            <p>
                A purchase budget is allocation of budget based on product category to be calculated
            </p>
        </field>
    </record>

    <menuitem id="menu_purchase_budget"
              name="Budgeting"
              parent="parent_menu_purchase_request"
              sequence="11"
              groups="group_purchase_request_user,group_purchase_request_manager"/>
    <menuitem id="menu_purchase_budget_act"
              sequence="1"
              parent="menu_purchase_budget"
              action="purchase_budget_action"/>
</odoo>
