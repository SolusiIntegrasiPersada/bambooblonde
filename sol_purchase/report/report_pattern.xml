<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="report_ptr">
        <t t-foreach="docs" t-as="doc">
            <t t-call="sol_purchase.report_document_ptr"/>
        </t>
    </template>


    <template id="report_document_ptr">
        <t t-call="web.basic_layout">
            <div class="header" t-att-style="report_header_style">
                <t t-set="company" t-value="res_company"></t>
                <div class="text-center">
                  <div class="row">
                    <div class="col-3 mb4">
                      <img alt="img" t-if="company.logo" t-att-src="image_data_uri(company.logo)" style="max-height: 60px;"/>
                    </div>
                    <div class="col-3"></div>
                    <div class="col-6 text-right">
                      <span t-if="company.company_details" t-field="company.company_details"/>
                    </div>
                  </div>
                </div>
            </div>
            <h2 style="text-align:left"><strong>PATTERN ALTERATION</strong></h2>
            <br/>
            <div class="body">
                <table border="1" cellpadding="1" cellspacing="1" style="border: 1pt solid black;">
                    <tbody>
                        <t t-foreach="doc.line_ids" t-as="line">
                              <tr style="border: 1pt solid black;">
                                  <td style="width:229px; border: 1pt solid black; padding: 5px;"><strong>Trans No.</strong></td>
                                  <td style="width:403px; border: 1pt solid black; padding: 5px;">
                                      <t t-esc="doc.name"/>
                                  </td>
                                  <td style="width:245px; border: 1pt solid black; padding: 5px;"><strong>Print Date</strong></td>
                                  <td style="width:411px; border: 1pt solid black; padding: 5px;">
                                      <t t-esc="datetime.date.today().strftime('%b %d, %Y')"/>
                                  </td>
                              </tr>
                              <tr style="border: 1pt solid black;">
                                  <td style="width:229px; border: 1pt solid black; padding: 5px;"><strong>Trans Date</strong></td>
                                  <td style="width:403px; border: 1pt solid black; padding: 5px;">
                                      <t t-esc="doc.date_start"/>
                                  </td>
                                  <td style="width:245px; border: 1pt solid black; padding: 5px;"><strong>Style Name</strong></td>
                                  <td style="width:411px; border: 1pt solid black; padding: 5px;">
                                      <span t-field="line.product_id.name"/>
                                  </td>
                              </tr>
                              <tr style="border: 1pt solid black;">
                                  <td style="width:229px; border: 1pt solid black; padding: 5px;"><strong>Model</strong></td>
                                  <td style="width:403px; border: 1pt solid black; padding: 5px;">
                                      <span t-field="line.product_id.categ_id"/>
                                  </td>
                                  <td style="width:245px; border: 1pt solid black; padding: 5px;"><strong>Size</strong></td>
                                  <td style="width:411px; border: 1pt solid black; padding: 5px;">
                                      <span t-field="line.size"/>
                                  </td>
                              </tr>
                              <tr style="border: 1pt solid black;">
                                  <td style="width:229px; border: 1pt solid black; padding: 5px;"><strong>Color</strong></td>
                                  <td style="width:403px; border: 1pt solid black; padding: 5px;">
                                      <span t-field="line.colour"/>
                                  </td>
                                  <td style="width:245px; border: 1pt solid black; padding: 5px;"><strong>Fabric</strong></td>
                                  <td style="width:411px; border: 1pt solid black; padding: 5px;">
                                      <span t-field="line.fabric_smp"/>
                                  </td>
                              </tr>
                              <tr style="border: 1pt solid black;">
                                  <td style="width:229px; border: 1pt solid black; padding: 5px;"></td>
                                  <td style="width:403px; border: 1pt solid black; padding: 5px;"></td>
                                  <td style="width:245px; border: 1pt solid black; padding: 5px;"><strong>Approved</strong></td>
                                  <td style="width:411px; border: 1pt solid black; padding: 5px;">
                                      <span t-field="doc.assigned_to"/>
                                  </td>
                              </tr>
                              <tr style="border: 1pt solid black;">
                                  <td style="width:229px; border: 1pt solid black; padding: 5px;"></td>
                                  <td style="width:403px; border: 1pt solid black; padding: 5px;"></td>
                                  <td style="width:245px; border: 1pt solid black; padding: 5px;"><strong>User</strong></td>
                                  <td style="width:411px; border: 1pt solid black; padding: 5px;">
                                      <span t-field="doc.requested_by"/>
                                  </td>
                              </tr>
                        </t>
                        <tr style="border: 1pt solid black;">
                          <td colspan="4" style="width:229px; border: 1pt solid black; padding: 5px;"><strong>Alteration Comments :</strong></td>
                        </tr>
                        <tr style="border: 1pt solid black;">
                          <td colspan="2" rowspan="1" style="width:229px; border: 1pt solid black; padding: 5px;">
                              <br />
                              <t t-esc='doc.alt_cmnt'/>
                              <br />
                              <br />
                              <br />
                              <br />
                              <br />
                          </td>
                          <td colspan="2" rowspan="1" style="text-align:center; width:245px; border: 1pt solid black; padding: 5px;">
                              <br />
                              <img t-if="line.product_id.image_1920" t-att-src="image_data_uri(line.product_id.image_1920)" style="max-height:220px; max-width:225px;"/>
                              <br />
                              <br />
                              <br />
                              <br />
                              <br />
                          </td>
                        </tr>
                        <tr style="border: 1pt solid black;">
                          <td colspan="4" style="width:229px; border: 1pt solid black; padding: 5px;"><strong>Pattern Maker To Fill Out :</strong></td>
                        </tr>
                        <t t-foreach="doc.get_last_record_pattern()" t-as="rec">
                            <tr style="border: 1pt solid black;">
                              <td style="width:229px; border: 1pt solid black; padding: 5px;"><strong>Pattern Marker</strong></td>
                              <td style="width:403px; border: 1pt solid black; padding: 5px;">
                                  <t t-esc="rec.pattern_marker"/>
                              </td>
                              <td style="width:245px; border: 1pt solid black; padding: 5px;"><strong>Size Approve</strong></td>
                              <td style="width:411px; border: 1pt solid black; padding: 5px;">
                                  <t t-esc="rec['size_approve']"/>
                              </td>
                            </tr>
                            <tr style="border: 1pt solid black;">
                              <td style="width:229px; border: 1pt solid black; padding: 5px;"><strong>Sample Size</strong></td>
                              <td style="width:403px; border: 1pt solid black; padding: 5px;">
                                  <t t-esc="rec['sample_size']"/>
                              </td>
                              <td style="width:245px; border: 1pt solid black; padding: 5px;"><strong>Fabric Width</strong></td>
                              <td style="width:411px; border: 1pt solid black; padding: 5px;">
                                  <t t-esc="rec['fabric_width']"/>
                              </td>
                            </tr>
                            <tr style="border: 1pt solid black;">
                              <td style="width:229px; border: 1pt solid black; padding: 5px;"><strong>Pattern Time</strong></td>
                              <td style="width:403px; border: 1pt solid black; padding: 5px;">
                                  <t t-esc="rec['pattern_time']"/>
                              </td>
                              <td style="width:245px; border: 1pt solid black; padding: 5px;"><strong>Costing Order</strong></td>
                              <td style="width:411px; border: 1pt solid black; padding: 5px;">
                                  <t t-esc="rec['pattern_cost']"/>
                              </td>
                            </tr>
                            <tr style="border: 1pt solid black;">
                              <td style="width:229px; border: 1pt solid black; padding: 5px;"><strong>Consumption</strong></td>
                              <td style="width:403px; border: 1pt solid black; padding: 5px;">
                                  <t t-esc="rec['consumption']"/>
                              </td>
                              <td style="width:245px; border: 1pt solid black; padding: 5px;"></td>
                              <td style="width:411px; border: 1pt solid black; padding: 5px;"></td>
                            </tr>
                        </t>
                    </tbody>
                </table>
            </div>

        </t>
    </template>

</odoo>