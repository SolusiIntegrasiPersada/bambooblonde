<odoo>
	<data>
	
	    <record id="stock_sales_summary_report_form_view" model="ir.ui.view">
			<field name="name">stock.sales.summary.report.form</field>
			<field name="model">stock.sales.summary.report</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				
		        <form string="Stock Sales Summary Report">
	                <group>
		        		<group>
		        			<field name="config_id" options="{'no_create':True, 'no_open':True}" required="1"/>
		        			<field name="shift" required="1"/>
		                </group>
		                <group>
		                	<field name="start_period" required="1" string="Start Date"/>
		                    <field name="end_period" required="1" string="End Date"/>
		                </group>
		        	</group>

	                <footer>
	                    <button name="print_excel_report" string="Export" type="object" class="oe_highlight"/> or 
	                    <button string="Cancel" class="oe_link" special="cancel"/>
	                </footer>
		          	
		        </form>
	    	</field>
	    </record>
		
	    <record id="action_stock_sales_summary_report_xlsx" model="ir.actions.act_window">
			<field name="name">Stock Sales Summary Report</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">stock.sales.summary.report</field>
			<field name="view_mode">form</field>
			<field name="view_id" ref="stock_sales_summary_report_form_view"/>
			<field name="target">new</field>
	    </record>
		
		<menuitem id="menu_stock_sales_summary_report_xlsx" action="action_stock_sales_summary_report_xlsx" parent="point_of_sale.menu_point_rep" sequence="5"/>
	
	</data>
</odoo>