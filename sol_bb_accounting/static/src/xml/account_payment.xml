<templates id="template" xml:space="preserve">
<!--    Chrome-->
    <t t-name="ShowPaymentInfo" t-inherit="account.ShowPaymentInfo" t-inherit-mode="extension" owl="1">
        <xpath expr="//t/div/table/t/tr/t/td/i" position="replace">
<!--            <t t-set="is_return" t-value="request.env['account.move'].sudo().get_is_cn()"/>-->
            <t t-set="is_return" t-value="False"/>
            <t t-if="is_return">
                <i class="o_field_widget text-right o_payment_label">Return on <t t-esc="line.date"/></i>
            </t>
            <t t-else="">
                <i class="o_field_widget text-right o_payment_label">Paid on <t t-esc="line.date"/></i>
            </t>
        </xpath>
    </t>
</templates>