<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <template id="report_testing">
            <t t-foreach="docs" t-as="o">
                <t t-call="sol_stock.doc_testing" t-lang="o.partner_id.lang"/>
            </t>
        </template>
        <template id="doc_testing">
            <t t-call="web.basic_layout">
                <div class="header" t-att-style="report_header_style">
                    <t t-set="company" t-value="res_company"></t>
                    <div class="text-center">
                      <div class="row">
                        <div class="col-3 mb4">
                          <img t-if="company.logo" t-att-src="image_data_uri(company.logo)" style="max-height: 60px;" alt="Logo"/>
                        </div>
                        <div class="col-3"></div>
                        <div class="col-6 text-right">
                          <span t-if="company.company_details" t-field="company.company_details"/>
                        </div>
                      </div>
                    </div>
                </div>
                <h2>Testing</h2>
                <t t-foreach="o.consolidated_lines.items()" t-as="line">
                    <div class="page">
                        <h1>Model: <t t-esc="line[0][0]" /></h1>
                        <h2>Category: <t t-esc="line[0][1]" /></h2>
                        <table>
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Colour</th>
                                    <th>Size</th>
                                    <th>Retail</th>
                                    <th>Price</th>
                                    <th>Code</th>
                                    <th>Quantity</th>
                                    <th>Price Receipt</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr t-foreach="line[1]" t-as="product_line">
                                    <td><t t-esc="product_line.name" /></td>
                                    <td><t t-esc="product_line.colour" /></td>
                                    <td><t t-esc="product_line.size" /></td>
                                    <td><t t-esc="product_line.retail" /></td>
                                    <td><t t-esc="product_line.price" /></td>
                                    <td><t t-esc="product_line.code" /></td>
                                    <td><t t-esc="product_line.qty" /></td>
                                    <td><t t-esc="product_line.price_receipt" /></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
            </t>


            </t>
        </template>

    </data>
</odoo>