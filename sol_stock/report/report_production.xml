<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="report_delivery_production">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <t t-set="o" t-value="o.with_context(lang=o.partner_id.lang or o.env.lang)" />
                <t t-set="partner" t-value="o.partner_id or (o.move_lines and o.move_lines[0].partner_id) or False"/>

                <t t-set="address">
                    <div name="div_outgoing_address">
                        <div t-if="o.should_print_delivery_address()">
                            <span><strong>Supplier Address:</strong></span>
                            <div t-field="o.move_lines[0].partner_id"
                                t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}'/>
                        </div>
                        <div t-elif="o.picking_type_id.code != 'internal' and o.picking_type_id.warehouse_id.partner_id">
                            <span><strong>Warehouse Address:</strong></span>
                            <div t-field="o.picking_type_id.warehouse_id.partner_id"
                                t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}'/>
                        </div>
                    </div>
                </t>
                <t t-set="information_block">
                    <div class="row">
                        <div class="col-7" name="div_incoming_address">
                            <div t-if="o.picking_type_id.code=='incoming' and partner">
                                <span><strong>Supplier Address:</strong></span>
                            </div>
                            <div t-if="o.picking_type_id.code=='internal' and partner">
                                <span><strong>Warehouse Address:</strong></span>
                            </div>
                            <div t-if="o.picking_type_id.code=='outgoing' and partner">
                                <span><strong>Supplier Address:</strong></span>
                            </div>
                            <div t-if="partner" name="partner_header">
                                <span><strong>Supplier:</strong></span>
                                <div t-field="partner.commercial_partner_id"
                                    t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}'/>
                                <p t-if="partner.sudo().commercial_partner_id.vat"><t t-esc="o.company_id.country_id.vat_label or 'Tax ID'"/>: <span t-field="partner.sudo().commercial_partner_id.vat"/></p>
                            </div>
                        </div>
                    </div>
                </t>
                <div class="page">
                    <br/>
                    <br/>
                    <h2>
                        PURCHASE NOTES - <span t-field="o.name"/>
                    </h2>
                    <div class="row mt32 mb32">
                        <div t-if="o.origin" class="col-auto" name="div_origin">
                            <strong>Order:</strong>
                            <p t-field="o.origin"/>
                        </div>
                        <div t-if="o.state" class="col-auto" name="div_sched_date">
                            <strong>Delivery Date:</strong>
                            <t t-if="o.state == 'done'">
                                <p t-field="o.date_done"/>
                            </t>
                            <t t-if="o.state != 'done'">
                                <p t-field="o.scheduled_date"/>
                           </t>
                        </div>
                    </div>
                    <table class="table table-sm" name="stock_move_table">
                        <thead>
                            <tr>
                                <th name="th_sm_product" style="text-align: center;"><strong>Product</strong></th>
                                <th name="th_sm_material" style="text-align: center;"><strong>Material</strong></th>
                                <th name="th_sm_color" style="text-align: center;"><strong>Color</strong></th>
                                <th name="th_sm_ordered" style="text-align: center;"><strong>Ordered</strong></th>
                                <th name="th_sm_quantity" style="text-align: center;"><strong>Delivered</strong></th>
                                <th name="th_sm_cost" style="text-align: center;"><strong>Cost</strong></th>
                                <th name="th_sm_total_cost" style="text-align: center;"><strong>Total Cost</strong></th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-set="lines" t-value="o.move_ids_without_package.filtered(lambda x: x.quantity_done != 0.0)"/>
                            <tr t-foreach="lines" t-as="move">
                                <td>
                                    <span t-field="move.product_id"/>
                                    <p t-if="move.description_picking != move.product_id.name and move.description_picking != move.product_id.display_name">
                                        <span t-field="move.description_picking"/>
                                    </p>
                                </td>
                                <td>
                                    <t t-foreach="move.material_ids" t-as="material">
                                        <t t-esc="material.product_id.name"/>
                                    </t>
                                </td>
                                <td style="text-align: center;">
                                    <span t-field="move.color_mo"/>
                                </td>
                                <td style="text-align: center;">
                                    <!-- <span t-field="move.product_uom_qty"/> -->
                                    <span t-field="o.total_product_uom_qty"/>
<!--                                    <span t-field="move.product_uom"/>-->
                                </td>
                                <td style="text-align: center;">
                                    <span t-field="move.quantity_done"/>
<!--                                    <span t-field="move.product_uom"/>-->
                                </td>
                                <td style="text-align: center;">
                                    <t t-esc="'{:,.0f}'.format(move.price_mo)"/>
                                </td>
                                <td style="text-align: center;">
                                    <t t-set="total_cost" t-value="move.price_mo * move.quantity_done" />
                                    <t t-esc="'{:,.0f}'.format(total_cost)"/>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <br/>
                    <table border="0" cellpadding="1" cellspacing="1" style="width:100%; border: 1px transparent; background-color: transparent;">
                        <tbody>
                            <tr style="background-color: transparent; ">
                                <td style="width:49px; padding: 3px; border: 1px transparent;">Notes</td>
                                <td style="width:7px; padding: 3px; border: 1px transparent;">:</td>
                                <td style="width:338px; padding: 3px; border: 1px transparent;">
                                    <span t-field="o.note"/>
                                </td>
                                <td style="text-align:right; width:481px; padding: 3px; border: 1px transparent;">Sub total</td>
                                <td style="width:2px; padding: 3px; border: 1px transparent;">:</td>
                                <td style="width:241px; padding: 3px; border: 1px transparent; text-align:right;">
                                    <t t-esc="'{:,.0f}'.format(total_cost)"/>
                                </td>
                            </tr>
                            <tr style="background-color: transparent; ">
                                <td colspan="3" rowspan="5" style="width:404px; border: 1px transparent;"></td>
                                <td style="text-align:right; width:157px; padding: 3px; border: 1px transparent;">PPn</td>
                                <td style="width:2px; padding: 3px; border: 1px transparent;">:</td>
                                <td style="width:241px; padding: 3px; border: 1px transparent; text-align:right;">-</td>
                            </tr>
                            <tr style="background-color: transparent; ">
                                <td style="text-align:right; width:157px; padding: 3px; border: 1px transparent;">Grand Total</td>
                                <td style="width:2px; padding: 3px; border: 1px transparent;">:</td>
                                <td style="width:241px; padding: 3px; border: 1px transparent; text-align:right;">
<!--                                    total_cost * PPn-->
                                    <t t-esc="'{:,.0f}'.format(total_cost)"/>
                                </td>
                            </tr>
                            <tr style="background-color: transparent; ">
                                <td style="text-align:right; width:157px; padding: 3px; border: 1px transparent;">Deposit</td>
                                <td style="width:2px; padding: 3px; border: 1px transparent;">:</td>
                                <td style="width:241px; padding: 3px; border: 1px transparent; text-align:right;"></td>
                            </tr>
                            <tr style="background-color: transparent; ">
                                <td style="text-align:right; width:157px; padding: 3px; border: 1px transparent;">Paid Amount</td>
                                <td style="width:2px; padding: 3px; border: 1px transparent;">:</td>
                                <td style="width:241px; padding: 3px; border: 1px transparent; text-align:right;">-</td>
                            </tr>
                            <tr style="background-color: transparent; ">
                                <td style="text-align:right; width:157px; padding: 3px; border: 1px transparent;">Balance</td>
                                <td style="width:2px; padding: 3px; border: 1px transparent;">:</td>
                                <td style="width:241px; padding: 3px; border: 1px transparent; text-align:right;">-</td>
                            </tr>
                        </tbody>
                    </table>
                    <br/>
                    <div class="container">
                        <table style="border-collapse: collapse; width: 100%; background-color: transparent; border: 0;">
                            <tbody style="font-size: 15px;background-color: transparent;">
                                <tr>
                                    <td style="width: 20%;text-align: center; border: 1px transparent;">Prepared By,</td>
                                    <td style="width: 20%;text-align: center; border: 1px transparent;"/>
                                    <td style="width: 20%;text-align: center; border: 1px transparent;">Ordered By,</td>
                                    <td style="width: 20%;text-align: center; border: 1px transparent;"/>
                                    <td style="width: 20%;text-align: center; border: 1px transparent;">Approved By,</td>
                                </tr>
                                <tr style="background-color: transparent; ">
                                    <td style="width: 20%;text-align: center; padding: 10px; border: 1px transparent;">
                                        <br/>
                                        <br/>
                                        <strong>
                                            ( ........................ )
                                            <br/>
                                        </strong>
                                    </td>
                                    <td style="width: 20%;text-align: center; border: 1px transparent;"/>
                                    <td style="width: 20%;text-align: center; padding: 10px; border: 1px transparent;">
                                        <br/>
                                        <br/>
                                        <strong>
                                            ( ........................ )
                                            <br/>
                                        </strong>
                                    </td>
                                    <td style="width: 20%;text-align: center; border: 1px transparent;"/>
                                    <td style="width: 20%;text-align: center; padding: 10px; border: 1px transparent;">
                                        <br/>
                                        <br/>
                                        <strong>
                                            ( ........................ )
                                            <br/>
                                        </strong>
                                    </td>
                                </tr>
                            </tbody>
                        </table>

                    </div>

                    <t t-set="backorders" t-value="o.backorder_ids.filtered(lambda x: x.state not in ('done', 'cancel'))"/>
                    <t t-if="o.backorder_ids and backorders">
                        <p class="mt-5">
                            <span>Remaining quantities not yet delivered:</span>
                        </p>
                        <table class="table table-sm" name="stock_backorder_table" style="table-layout: fixed;">
                            <thead>
                                <tr>
                                    <th name="th_sb_product"><strong>Product</strong></th>
                                    <th/>
                                    <th name="th_sb_quantity" class="text-center"><strong>Quantity</strong></th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="backorders" t-as="backorder">
                                    <t t-set="bo_lines" t-value="backorder.move_lines.filtered(lambda x: x.product_uom_qty)"/>
                                    <tr t-foreach="bo_lines" t-as="bo_line">
                                        <td class="w-auto">
                                            <span t-field="bo_line.product_id"/>
                                            <p t-if="bo_line.description_picking != bo_line.product_id.name and bo_line.description_picking != bo_line.product_id.display_name">
                                                <span t-field="bo_line.description_picking"/>
                                            </p>
                                        </td>
                                        <td/>
                                        <td class="text-center w-auto">
                                            <span t-field="bo_line.product_uom_qty"/>
                                            <span t-field="bo_line.product_uom"/>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </t>

                    <div t-if="o.signature" class="mt32 ml64 mr4" name="signature">
                        <div class="offset-8">
                            <strong>Signature</strong>
                        </div>
                        <div class="offset-8">
                            <img t-att-src="image_data_uri(o.signature)" style="max-height: 4cm; max-width: 8cm;"/>
                        </div>
                        <div class="offset-8 text-center">
                            <p t-field="o.partner_id.name"/>
                        </div>
                    </div>
                </div>
            </t>
         </t>
    </template>

    <template id="report_production">
        <t t-foreach="docs" t-as="o">
            <t t-call="sol_stock.report_delivery_production" t-lang="o.partner_id.lang or o.env.lang"/>
        </t>
    </template>
</odoo>
