<odoo>
    <data>
        <record id="inherit_view_stock_picking" model="ir.ui.view">
            <field name="name">stock.picking.view.form.inherit</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
<!--                <xpath expr="//header" position="inside">-->
<!--                    <button name="action_print_quotation_receive" string="Print Report Receiving" type="object" class="oe_highlight" attrs="{'invisible': [('picking_type_code', 'not in', 'mrp_operation')]}"/>-->
<!--                    <button name="action_print_quotation_internal" string="Print Report Internal Transfer" type="object" class="oe_highlight" attrs="{'invisible': [('picking_type_code', 'not in', 'internal')]}"/>-->
<!--                    <button name="action_print_quotation_return" string="Print Report Return" type="object" class="oe_highlight" attrs="{'invisible': [('picking_type_code', 'not in', 'mrp_operation')]}"/>-->
<!--                </xpath>-->
                <xpath expr="//button[@name='%(stock.act_stock_return_picking)d']" position="attributes">
                    <attribute name="attrs">{'invisible': [('hide_return', '=', True)]}</attribute>
                </xpath>
                <field name="origin" position="after">
                    <field name="style_name" attrs="{'invisible': ['&amp;', ('is_manufacture', '=', False), ('picking_type_code', 'in', 'internal')]}"/>
                    <field name="origin_pr" invisible="1" attrs="{'required': [('mandatory_source', '=', True)]}"/>
                    <field name="mandatory_source" invisible="1"/>
                    <field name="mrp_id" invisible="1"/>
                    <field name="count" invisible="1"/>
                    <field name="is_manufacture" invisible="1"/>
                    <field name="hide_return" invisible="1"/>
                    <field name="is_foc_type" invisible="1"/>
                </field>
                <xpath expr="//div[@class='o_td_label']" position="attributes">
                    <attribute name="attrs">{'invisible': ['&amp;', ('picking_type_code', 'in', 'internal'), ('is_manufacture', '=', False)]}</attribute>
                </xpath>
                <xpath expr="//field[@name='partner_id']" position="attributes">
                    <attribute name="attrs">{'invisible': ['&amp;', ('picking_type_code', 'in', 'internal'), ('is_manufacture', '=', False)]}</attribute>
                </xpath>
                <xpath expr="//notebook/page/field/tree/field[@name='product_uom_qty']" position="after">
                    <field name="material_ids" widget="many2many_tags" attrs="{'column_invisible': [('parent.picking_type_code', '=', 'internal')]}"/>
                    <field name="image" widget="image" class="oe_avatar" />
                    <field name="color_mo" attrs="{'column_invisible': [('parent.picking_type_code', '=', 'internal')]}"/>
                    <field name="fabric_width" optional="show"/>
                    <field name="price" attrs="{'column_invisible': [('parent.picking_type_code', 'in', 'mrp_operation')]}"/>
                    <field name="price_mo" attrs="{'column_invisible': [('parent.picking_type_code', 'not in', 'mrp_operation')]}"/>
                    <field name="qty_available" attrs="{'column_invisible': [('parent.picking_type_code', '!=', 'internal')]}"/>
                </xpath>
<!--                <xpath expr="//notebook/page[@name='extra']/group/group/field[@name='group_id']" position="after">-->
<!--                    <field name="source_so"/>-->
<!--                </xpath>-->
            </field>
        </record>

        <record id="inherit_stock_picking_type" model="ir.ui.view">
            <field name="name">stock.picking.type.view.form.inherit</field>
            <field name="model">stock.picking.type</field>
            <field name="inherit_id" ref="stock.view_picking_type_form"/>
            <field name="arch" type="xml">
                <field name="show_operations" position="after">
                    <field name="mandatory_source"/>
                    <field name="hide_return" />
                    <field name="is_foc_type" />
                </field>
            </field>
        </record>

        <record id="vpicktree_inherit_stock" model="ir.ui.view">
            <field name="name">stock.picking.view.tree.inherit</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.vpicktree"/>
            <field name="arch" type="xml">
                <field name="location_dest_id" position="after">
                    <field name="style_name" readonly="1"/>
                </field>
                <xpath expr="//field[@name='origin']" position="attributes">
                    <attribute name="optional">hide</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>