<odoo>
    <data>
        <record model='ir.ui.view' id='report_sampdev_wizard_form'>
            <field name="name">report.sampdev.wizard.form</field>
            <field name="model">report.sampdev.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <group string="Sample Development">
                        <field name="from_date" required="1"/>
                        <field name="to_date" required="1"/>
                        <field name="style_name_id"/>
<!--                        <field name="style_name" invisible="1"/>-->
                    </group>
                    <footer>
                        <button name="button_generate_excel" type="object" default_focus="1"
                            string="Excel Report" class="oe_highlight" icon="fa-download"/>
                        <button string="Cancel" class="oe_link" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <record model='ir.actions.act_window' id='report_sampdev_wizard_action'>
            <field name="name">Report Sample Development</field>
            <field name="res_model">report.sampdev.wizard</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="report_sampdev_wizard_form"/>
            <field name="target">new</field>
        </record>

        <menuitem name="Report Sample Development"
            parent="sol_bb_report.menu_report_sample_development"
            id="menu_report_sampdev_wizard"
            action="report_sampdev_wizard_action"
            sequence="5"
            groups="sol_bb_report.group_special_report_taboo"/>

        <report
            id="report_sampdev_wizard_xlsx"
            model="report.sampdev.wizard"
            string="Report Sample Development"
            report_type="xlsx"
            name="sol_bb_report.sampdev.xlsx"
            file="Report Sample Development.xlsx"
            menu="False"
            attachment_use="False"/>
    </data>
</odoo>