<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model='ir.ui.view' id='report_best_seller_category_wizard_form'>
        <field name="name">report.best.seller.category.form</field>
        <field name="model">report.best.seller.category</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="from_date" required="1"/>
                    <field name="to_date" required="1"/>
                    <field name="category" required="1"/>
                </group>
                <footer>
                    <button name="button_generate_excel" type="object" default_focus="1" string="Excel Report"
                            class="oe_highlight" icon="fa-download"/>
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record model='ir.actions.act_window' id='report_best_seller_category_wizard_action'>
        <field name="name">Report Best Seller Category</field>
        <field name="res_model">report.best.seller.category</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="report_best_seller_category_wizard_form"/>
        <field name="target">new</field>
    </record>

    <menuitem name="Report Best Seller Category"
              parent="point_of_sale.menu_point_rep"
              id="menu_report_best_seller_category_wizard"
              action="report_best_seller_category_wizard_action"
              sequence="6"/>

    <report id="report_best_seller_category_wizard_xlsx"
            model="report.best.seller.category"
            string="Report Best Seller Category"
            report_type="xlsx"
            name="sol_bb_report.best_seller_category.xlsx"
            file="Best Seller Category.xlsx"
            menu="False"
            attachment_use="False"/>


</odoo>
